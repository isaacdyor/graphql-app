{
    "extends": "ts-node/node16/tsconfig.json",
    "compilerOptions": {
      "strictNullChecks": true,
      "noImplicitAny": true,
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["esnext"],
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"]
    },
    "ts-node": {
      "transpileOnly": true,
      "files": true,
      "esm": true,
      "compilerOptions": {
        "module": "ESNext"
      }
    }
  }